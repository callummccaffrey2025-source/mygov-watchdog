#!/usr/bin/env bash
set -euo pipefail
name="${1:-dev}"
pidfile="logs/${name}.pid"
if [[ -f "$pidfile" ]]; then
  pid="$(cat "$pidfile")"
  if kill "$pid" 2>/dev/null; then
    echo "stopped ${name} (pid ${pid})"
  else
    echo "process not running; cleaned pidfile"
  fi
  rm -f "$pidfile"
else
  echo "no pidfile for '${name}'"
fi
